{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Add this
    "paths": {
      "@/components/*": ["components/*"], // Add this for aliasing components
      "@/context/*": ["context/*"] ,
      "@/utils/*": ["utils/*"],  
      "@/models/*": ["models/*"],     
    }
  },  
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/api/ride/route.js"  ],
  "exclude": [
    "node_modules"
  ]
}
